lightOrange = #ffb74d

nav ul li a
  color #ffa500

#mobile-demo li a
  color #ffa500

nav img
  margin-top 3px

#last-nav-item
  margin-right 10px

.fa-bars
  color #ffa500

#logo
  height 70px
  width 250px
  margin-left 15px

.dropdown-content li a
  color #ffa500

.parallax-container
  height 250px


main div p
  margin-bottom: 2em

#contact
  color lightOrange
  padding-top 30px

  h1
    margin-bottom 50px
    font-family 'Bitter', serif

  textarea
    &:focus
      color lightOrange
      border-bottom: 1px solid lightOrange
      box-shadow: 0 1px 0 0 lightOrange

  textarea:focus + label
    color lightOrange

  button
    width 20%
    margin-top 1em
    margin-bottom 2em

 .input-field label
   color lightOrange


 .input-field input[type=text]:focus + label
   color lightOrange


 .input-field input[type=text]:focus
   border-bottom: 1px solid lightOrange
   box-shadow: 0 1px 0 0 lightOrange


 .input-field input[type=text].valid
   border-bottom: 1px solid lightOrange
   box-shadow: 0 1px 0 0 lightOrange


 .input-field input[type=text].invalid
   border-bottom: 1px solid lightOrange
   box-shadow: 0 1px 0 0 lightOrange


 .input-field input[type=email]:focus + label
   color lightOrange


 .input-field input[type=email]:focus
   border-bottom: 1px solid lightOrange
   box-shadow: 0 1px 0 0 lightOrange

 .input-field .prefix.active
   color lightOrange


.materialize-textarea
  color lightOrange
  margin-bottom 25px

@media (max-width: 499px)
  #logo
    height 60px
